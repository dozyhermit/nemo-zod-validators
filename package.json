{
  "name": "@dozyhermit/nemo-zod-validators",
  "version": "2.0.3",
  "description": "A collection of middleware validators made with zod and @rescale/nemo for Next.js",
  "license": "MIT",
  "author": "dozyhermit (https://github.com/dozyhermit)",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "directories": {
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dozyhermit/nemo-zod-validators.git"
  },
  "homepage": "https://github.com/dozyhermit/nemo-zod-validators#readme",
  "bugs": {
    "url": "https://github.com/dozyhermit/nemo-zod-validators/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "keywords": [
    "zod",
    "@rescale/nemo",
    "Next.js"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rm -rf ./lib/",
    "lint": "eslint",
    "types:check": "tsc --noEmit",
    "prettier:check": "prettier . --check",
    "prettier:write": "prettier . --write",
    "format:write": "npm run prettier:write",
    "format:check": "npm run types:check && npm run lint && npm run prettier:check",
    "test": "jest --coverage"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "eslint": "^9.33.0",
    "jest": "^30.0.4",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "typescript": "^5",
    "typescript-eslint": "^8.41.0"
  },
  "dependencies": {
    "@rescale/nemo": "^2.0.2",
    "cookie": "^1.0.2",
    "next": "^15.4.7",
    "zod": "^4.0.17"
  }
}
