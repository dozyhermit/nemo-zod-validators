{
  "name": "@dozyhermit/nemo-zod-validators",
  "version": "2.1.3",
  "description": "A collection of middleware validators made with zod and @rescale/nemo for Next.js",
  "license": "MIT",
  "author": "dozyhermit (https://github.com/dozyhermit)",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "directories": {
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dozyhermit/nemo-zod-validators.git"
  },
  "homepage": "https://github.com/dozyhermit/nemo-zod-validators#readme",
  "bugs": {
    "url": "https://github.com/dozyhermit/nemo-zod-validators/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "keywords": [
    "zod",
    "@rescale/nemo",
    "Next.js"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rm -rf ./lib/",
    "lint": "eslint",
    "types:check": "tsc --noEmit",
    "prettier:check": "prettier . --check",
    "prettier:write": "prettier . --write",
    "format:write": "npm run prettier:write",
    "format:check": "npm run types:check && npm run lint && npm run prettier:check",
    "test:unit": "jest src/__tests__/unit/**/*",
    "test:api": "cd src/__tests__/functional/api/ && npm i && npm run dev",
    "test:wait": "npx wait-on http://localhost:3000",
    "test:functional": "npm run test:api & npm run test:wait && jest src/__tests__/functional/**/*",
    "test": "npm run test:api & npm run test:wait && jest --coverage"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.6",
    "axios": "^1.13.2",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "typescript": "^5",
    "typescript-eslint": "^8.53.1",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@rescale/nemo": "^2.1.1",
    "cookie": "^1.1.1",
    "next": "^16.1.1",
    "zod": "^4.3.5"
  }
}
